{% extends "base.html" %}
{% block searchlist  %}
    {% if error %}
                <p style="color: red;">你输入的不是IP地址或查询内容为空！！</p>
        {% endif %} 
    <p>
        <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
         <th>客户CID</th><th>客户合同名</th><th>安装名义</th><th>业务员</th><th>BP</th><th>客户状态</th><th>客户创建日期</th><th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for cid in room.object_list %}
        <tr>
        <td><a href="/site/{{ cid.cid }}">{{ cid.cid }}</a></td>
        <td>{{ cid.contractname }}</td>
        <td>{{ cid.typeid }}</td> 
        <td>{{ cid.sales}}</td>
        <td>{{ cid.bp}}</td>
        <td><span style="color:red"> {{ cid.status }}</span> </td>
        <td>{{ cid.cidcreate_date }}</td> 
        <td><a href="{{ cid.cid }}">修改</a>&nbsp; &nbsp;<a href="del/{{ cid.cid }}">删除</a></td>
        </tr>
        {% endfor %}
        </tbody>
        </table>
        </p>
{% endblock %}
